<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/assets/vendor.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/main.min.css" asp-append-version="true">

    <style>
        html, body, main {
            width: 100%;
            height: 100%;
        }
    </style>

    <title>@ViewData["Title"] - MyKniga</title>
</head>
<body class="bg-darker" id="waves">
<nav class="navbar navbar-expand navbar-dark bg-transparent fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="~/brand.png" width="30" height="30" alt=""/>
            MyKniga
        </a>
        <div class="navbar-nav ml-auto">
            <partial name="_LoginPartial"/>
        </div>
    </div>
</nav>

<partial name="_CookieConsentPartial"/>

<main class="d-flex align-items-center justify-content-center">
    @RenderBody()
</main>


<script src="~/assets/vendor.min.js" asp-append-version="true"></script>
<script src="~/assets/main.min.js" asp-append-version="true"></script>

<script src="~/assets/login.min.js" asp-append-version="true"></script>
<script>
    VANTA.WAVES(
        {
            el: "#waves",
            color: 0x232323
        });
</script>

</body>
</html>