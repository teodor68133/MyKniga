@model BookDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-12 col-md-3">
        <img class="book-details-img" src="@Model.ImageUrl" alt="@Model.Title"/>
    </div>
    <div class="col-12 col-md-9">
        <h1>@Model.Title</h1>
        <hr/>
        <p class="text-muted">
            @Model.Author - @Model.Year
        </p>
        <h4 class="mt-5">@Model.ShortDescription</h4>
        <div class="d-flex flex-row justify-content-between">
            <h2 class="text-primary d-inline-block">â‚¬@Model.Price</h2>
            <div>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-cart-plus"></i>
                    Add to cart
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row jumbotron mt-3 shadow">
    <div class="col-12 col-md-3">
        <div class="d-flex justify-content-between">
            <p class="font-weight-bold">
                <i class="fas fa-book"></i>
                ISBN
            </p>
            <p>@Model.Isbn</p>
        </div>
        <div class="d-flex justify-content-between">
            <p class="font-weight-bold">
                <i class="far fa-file"></i>
                Pages
            </p>
            <p>@Model.Pages</p>
        </div>
    </div>
    <div class="col-12 col-md-8 offset-md-1">
        <p>@Model.Description</p>
    </div>
</div>