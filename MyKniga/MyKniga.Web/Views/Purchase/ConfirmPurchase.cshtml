@model BookDetailsViewModel
<div class="text-center mt-3 w-50 mx-auto">
    <h3>Confirm Purchase:</h3>
    <img class="book-thumbnail-img my-2" src="@Model.ImageUrl" alt="@Model.Title"/>
    <h6>@Model.Title</h6>
    <form asp-action="PurchaseBook" class="mt-3">
        <input type="hidden" name="bookId" value="@Model.Id"/>
        <a class="btn btn-outline-secondary mx-3" asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        <button type="submit" class="btn btn-primary mx-3">Buy for &euro;@Model.Price</button>
    </form>
</div>